<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="PocztaDesktop.Views.SettingsPage"
             BackgroundColor="{DynamicResource BackgroundColor}">
    <VerticalStackLayout Spacing="20" Padding="20" BackgroundColor="{DynamicResource BackgroundColor}">
        <!-- Logo -->
        <Image Source="logo.png" 
           HeightRequest="100" 
           WidthRequest="100" 
           HorizontalOptions="Center" 
           VerticalOptions="Start"
           Aspect="AspectFit" />

        <!-- Nagłówek -->
        <Label Text="Ustawienia"
           FontSize="24" 
           FontAttributes="Bold" 
           TextColor="{DynamicResource TextColor}" 
           HorizontalOptions="Center" 
           VerticalOptions="Center" />

        <!-- Przycisk do zmiany motywu na ciemny -->
        <Button Text="Zmień motyw na ciemny" 
            TextColor="{DynamicResource ButtonTextColor}" 
            BackgroundColor ="{DynamicResource ButtonColor}"
            WidthRequest="300" HorizontalOptions="Center"
            CornerRadius="20" 
            HeightRequest="50"
            FontAttributes="Bold"
            Clicked="OnChangeThemeToDark" />

        <!-- Przycisk do zmiany motywu na jasny -->
        <Button Text="Zmień motyw na jasny" 
            TextColor="{DynamicResource ButtonTextColor}" 
            BackgroundColor="{DynamicResource ButtonColor}" 
            WidthRequest="300" HorizontalOptions="Center"
            CornerRadius="20" 
            HeightRequest="50"
            FontAttributes="Bold"
            Clicked="OnChangeThemeToLight" />
    </VerticalStackLayout>
</ContentPage>